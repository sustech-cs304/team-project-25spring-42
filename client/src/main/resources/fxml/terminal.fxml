<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sustech.cs304.terminal.TerminalController">
    <center>
        <TextArea fx:id="terminalArea" editable="false" wrapText="true"/>
    </center>
    <bottom>
        <TextField fx:id="inputField" promptText="Enter command..." onKeyPressed="#handleInput"/>
    </bottom>
</BorderPane>