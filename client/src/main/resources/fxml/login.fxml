<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="loginPane" alignment="BOTTOM_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sustech.cs304.login.LoginController">
   <children>
      <Button fx:id="githubButton" mnemonicParsing="false" onAction="#loginWithGitHub" styleClass="github-button" stylesheets="@../css/login.css" text="Sign in with Github" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets top="300.0" />
         </StackPane.margin>
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/github.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</StackPane>
