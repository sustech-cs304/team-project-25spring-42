<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="loginPane" alignment="BOTTOM_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sustech.cs304.login.LoginController">
   <children>
      <Button fx:id="githubButton" mnemonicParsing="false" onAction="#loginWithGitHub" prefHeight="45.0" prefWidth="250.0" styleClass="github-button" stylesheets="@../css/login.css" text="Sign in with Github" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets top="300.0" />
         </StackPane.margin>
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" translateX="-15.0">
               <image>
                  <Image url="@../img/github.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Label styleClass="fancy-text" stylesheets="@../css/login.css" text="Welcome to AIDE!" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets bottom="200.0" />
         </StackPane.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#loginWithX" prefHeight="45.0" prefWidth="250.0" styleClass="x-button" stylesheets="@../css/login.css" text="Sign in with X" StackPane.alignment="CENTER" fx:id="xButton">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" translateX="-30.0">
               <image>
                  <Image url="@../img/x.png" />
               </image>
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </graphic>
         <StackPane.margin>
            <Insets top="170.0" />
         </StackPane.margin>
      </Button>
   </children>
</StackPane>
