<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>

<!-- 注意：这里移除了 fx:controller 属性 -->
<fx:root type="javafx.scene.control.Button" xmlns:fx="http://javafx.com/fxml/1" prefWidth="400">
    <graphic>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="courseIcon" fitWidth="24" fitHeight="24" preserveRatio="true"/>
            <VBox spacing="5">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="courseNameLabel" styleClass="course-name"/>
                    <StackPane fx:id="statusIndicator">
                        <Circle fx:id="statusCircle" radius="8" fill="#cccccc"/>
                    </StackPane>
                </HBox>
                <Label fx:id="teacherLabel" styleClass="teacher-name"/>
            </VBox>
        </HBox>
    </graphic>
</fx:root>
